                               <!--authorities-by-username-query="SELECT u.email, r.role FROM users u, user_roles r-->
                               <!--WHERE u.id = r.user_id AND u.email = ?"-->
            <!--/>-->

            <!--<authUser-service>-->
                <!--<authUser name="authUser@yandex.ru" password="password" authorities="ROLE_USER"/>-->
                <!--<authUser name="admin@gmail.com" password="admin" authorities="ROLE_ADMIN"/>-->
            <!--</authUser-service>-->
        </authentication-provider>
    </authentication-manager>
</beans:beans>